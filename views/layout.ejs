<!DOCTYPE html>
<html>
  <head>
    <title><%=typeof title == 'undefined' ? 'New Sails App' : title%></title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/importer.css">
    <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" href="/styles/template.css">
    <!--STYLES END-->
  </head>

  <body>
  <nav>
    <a href="#">
      <img src="http://via.placeholder.com/50x50/313131/ffffff">
    </a>
    <div class="middleNavGroup">
      <ul class="button-list">
        <li class="menu-item item sub-holder"><a href="#" class="item-link">Tournaments</a>
          <ul class="dropdown-container">
            <a href="#"><li class="sub-item">PC</li></a>
            <a href="#"><li class="sub-item sub-link-2">PS4</li></a>
            <a href="#"><li class="sub-item sub-link-2">XB1</li></a>
          </ul>
        </li>
        <a href="#"><li class="menu-item item item-2">Leaderboards</li></a>
      </ul>
    </div>
    <div class="right-buttons">
      <% if(req.session.userName){ %>
          <a href="#"><%= req.session.userName %></a>
          <a href="/logout" class="second"><span class="tab">Logout</span></a>
      <% }else{ %>
        <div class="login" id="loginBTN">Login</div>
      <% } %>
      <!-- <div class="login" id="loginBTN">Login</div> -->
    </div>
  </nav>
  <div class="login-modal-container" id="modal">
    <div class="modal-content">
      <h2>Login</h2>
      <form method="post" action="/loginUser">
        <input type="text" name="username" id="usernameInput">
        <input type="password" name="password" id="passwordInput">
        <input type="submit" value="Login">
      </form>
      <span class="register">No account? <a href="/register" class="register-link">Create one!</a></span>
    </div>
  </div>
  <%- body %>

  <!--SCRIPTS-->
  <script src="/js/dependencies/sails.io.js"></script>
  <!--SCRIPTS END-->
  <script>
    var modal = document.getElementById("modal");
    var btn = document.getElementById("loginBTN");

    // Open Modal
    btn.onclick = function(){
      modal.style.display = "flex";
    }
    // Close Modal
    window.onclick = function(event){
      if(event.target == modal){
        modal.style.display = "none";
      }
    }
  </script>
  </body>
</html>
